    "tags": [ "Zipkin", "Tracer", "OpenTracing","Tracing", "Criteo", "zipkin4net" ],
    "owners": [ "Criteo" ],
    "licenseUrl": "https://github.com/criteo/zipkin4net/blob/master/LICENSE",
